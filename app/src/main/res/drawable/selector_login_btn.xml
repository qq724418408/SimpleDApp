<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/colorWhite">
        <shape>
            <solid android:color="@color/colorTransparent" />
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/colorWhite" />
        </shape>
    </item>
    <item android:color="@color/colorGreen" android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorTransparent" />
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/colorGreen" />
        </shape>
    </item>
    <item android:color="@color/colorGreen" android:state_focused="true">
        <shape>
            <solid android:color="@color/colorTransparent" />
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/colorGreen" />
        </shape>
    </item>
</selector>